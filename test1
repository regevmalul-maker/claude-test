<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Testing Suite</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div id="app"></div>

  <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react/18.2.0/umd/react.production.min.js"></script>
  <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/18.2.0/umd/react-dom.production.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/7.23.5/babel.min.js"></script>

  <script type="text/babel">
    const { useState } = React;

    // Lucide React Icons as SVG components
    const Check = ({ size = 20, className = "" }) => (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}>
        <polyline points="20 6 9 17 4 12"></polyline>
      </svg>
    );

    const X = ({ size = 20, className = "" }) => (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}>
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    );

    const RefreshCw = ({ size = 18, className = "" }) => (
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}>
        <polyline points="23 4 23 10 17 10"></polyline>
        <polyline points="1 20 1 14 7 14"></polyline>
        <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
      </svg>
    );

    function TestApp() {
      const [tests, setTests] = useState([
        { id: 1, name: 'Button Click Test', status: 'pending', description: 'Click the test button' },
        { id: 2, name: 'Input Test', status: 'pending', description: 'Type something in the input' },
        { id: 3, name: 'Toggle Test', status: 'pending', description: 'Toggle the switch' },
        { id: 4, name: 'Counter Test', status: 'pending', description: 'Increment the counter to 5' }
      ]);
      
      const [inputValue, setInputValue] = useState('');
      const [toggleValue, setToggleValue] = useState(false);
      const [counter, setCounter] = useState(0);

      const updateTestStatus = (id, status) => {
        setTests(tests.map(test => 
          test.id === id ? { ...test, status } : test
        ));
      };

      const handleButtonClick = () => {
        updateTestStatus(1, 'passed');
      };

      const handleInputChange = (e) => {
        setInputValue(e.target.value);
        if (e.target.value.length > 0) {
          updateTestStatus(2, 'passed');
        }
      };

      const handleToggle = () => {
        setToggleValue(!toggleValue);
        updateTestStatus(3, 'passed');
      };

      const handleCounterIncrement = () => {
        const newCount = counter + 1;
        setCounter(newCount);
        if (newCount >= 5) {
          updateTestStatus(4, 'passed');
        }
      };

      const resetTests = () => {
        setTests(tests.map(test => ({ ...test, status: 'pending' })));
        setInputValue('');
        setToggleValue(false);
        setCounter(0);
      };

      const passedTests = tests.filter(t => t.status === 'passed').length;

      return (
        <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
          <div className="max-w-4xl mx-auto">
            <div className="bg-white rounded-2xl shadow-xl p-8">
              <div className="flex items-center justify-between mb-8">
                <h1 className="text-3xl font-bold text-gray-800">Testing Suite</h1>
                <button
                  onClick={resetTests}
                  className="flex items-center gap-2 px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition"
                >
                  <RefreshCw size={18} />
                  Reset
                </button>
              </div>

              <div className="mb-8 p-4 bg-indigo-50 rounded-lg">
                <div className="text-sm text-gray-600 mb-2">Progress</div>
                <div className="flex items-center gap-4">
                  <div className="flex-1 bg-gray-200 rounded-full h-3">
                    <div 
                      className="bg-indigo-600 h-3 rounded-full transition-all duration-500"
                      style={{ width: `${(passedTests / tests.length) * 100}%` }}
                    />
                  </div>
                  <span className="text-lg font-semibold text-indigo-600">
                    {passedTests}/{tests.length}
                  </span>
                </div>
              </div>

              <div className="space-y-6">
                {tests.map(test => (
                  <div 
                    key={test.id}
                    className={`p-4 rounded-lg border-2 transition ${
                      test.status === 'passed' 
                        ? 'border-green-500 bg-green-50' 
                        : 'border-gray-200 bg-gray-50'
                    }`}
                  >
                    <div className="flex items-start justify-between mb-3">
                      <div>
                        <h3 className="font-semibold text-gray-800">{test.name}</h3>
                        <p className="text-sm text-gray-600">{test.description}</p>
                      </div>
                      <div className={`p-2 rounded-full ${
                        test.status === 'passed' ? 'bg-green-500' : 'bg-gray-300'
                      }`}>
                        {test.status === 'passed' ? (
                          <Check size={20} className="text-white" />
                        ) : (
                          <X size={20} className="text-white" />
                        )}
                      </div>
                    </div>

                    <div className="mt-3">
                      {test.id === 1 && (
                        <button
                          onClick={handleButtonClick}
                          className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
                        >
                          Test Button
                        </button>
                      )}
                      
                      {test.id === 2 && (
                        <input
                          type="text"
                          value={inputValue}
                          onChange={handleInputChange}
                          placeholder="Type something here..."
                          className="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none"
                        />
                      )}
                      
                      {test.id === 3 && (
                        <button
                          onClick={handleToggle}
                          className={`w-16 h-8 rounded-full transition ${
                            toggleValue ? 'bg-green-500' : 'bg-gray-300'
                          }`}
                        >
                          <div className={`w-6 h-6 bg-white rounded-full transition-transform ${
                            toggleValue ? 'translate-x-9' : 'translate-x-1'
                          }`} />
                        </button>
                      )}
                      
                      {test.id === 4 && (
                        <div className="flex items-center gap-4">
                          <button
                            onClick={handleCounterIncrement}
                            className="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
                          >
                            Increment
                          </button>
                          <span className="text-2xl font-bold text-gray-800">
                            {counter}
                          </span>
                        </div>
                      )}
                    </div>
                  </div>
                ))}
              </div>

              {passedTests === tests.length && (
                <div className="mt-8 p-6 bg-green-100 border-2 border-green-500 rounded-lg text-center">
                  <h2 className="text-2xl font-bold text-green-700 mb-2">
                    ğŸ‰ All Tests Passed!
                  </h2>
                  <p className="text-green-600">Great job! Everything is working correctly.</p>
                </div>
              )}
            </div>
          </div>
        </div>
      );
    }

    ReactDOM.render(<TestApp />, document.getElementById('app'));
  </script>
</body>
</html>
